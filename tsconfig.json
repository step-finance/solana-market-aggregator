{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "exclude":[
    "./node_modules",
  ],
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
